
<h2><strong>Write a Review!</strong></h2>
<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <%= form_for([@recipe, @recipe.reviews.build]) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :review %>
      <%= f.text_area :review, rows:10 %>
      
      <%= f.submit %>
    
    <% end %>
  </div>
</div>